	<config>
	  <fields name="params">
		<fieldset name="basic">	
			<field name="email" type="text"
				default=""
				size="60"
				description="PLG_ISBNREGISTRY_FORMS_EMAIL_DESC"
				label="PLG_ISBNREGISTRY_FORMS_EMAIL_LBL"
			/>	
			<field name="notify_admin" type="radio"
				default="1"
				description="PLG_ISBNREGISTRY_FORMS_NOTIFY_ADMIN_DESC"
				label="PLG_ISBNREGISTRY_FORMS_NOTIFY_ADMIN_LBL"
				>
				<option value="1">PLG_ISBNREGISTRY_FORMS_YES</option>
				<option value="0">PLG_ISBNREGISTRY_FORMS_NO</option>			
