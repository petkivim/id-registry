	<version>0.0.1</version>
	<description>PLG_ISBNREGISTRY_FORMS_DESC</description>
	<files>
	   <filename plugin="isbnregistry_forms">isbnregistry_forms.php</filename>
	   <filename>isbnregistryFormsHtmlBuilder.php</filename>
	   <filename>isbnregistryFormsHelper.php</filename>
	   <filename>isbnregistryFormsLogger.php</filename>
	   <folder>css</folder>
	   <folder>scripts</folder>
	   <folder>language</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_content_isbnregistry_forms.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.plg_content_isbnregistry_forms.sys.ini</language>
