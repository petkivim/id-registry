<form>
    <fields name="filter">
        <field
            name="search"
            type="text"
            label="COM_ISBNREGISTRY_PUBLISHER_FILTER_SEARCH_LABEL"
            description="COM_ISBNREGISTRY_PUBLISHER_FILTER_SEARCH_DESC"
            hint="JSEARCH_FILTER"
        />
        <field
            name="target_field"
            type="list"
            label="COM_ISBNREGISTRY_PUBLISHER_FILTER_TARGET_FIELD_LABEL"
            description="COM_ISBNREGISTRY_PUBLISHER_FILTER_TARGET_FIELD_DESC"
            onchange="this.form.submit();"
            default=""
        >
            <option value="">COM_ISBNREGISTRY_PUBLISHER_FILTER_TARGET_FIELD_SELECT</option>
            <option value="additional_info">COM_ISBNREGISTRY_PUBLISHER_FILTER_ADDITIONAL_INFO</option>
			<option value="contact_person">COM_ISBNREGISTRY_PUBLISHER_FILTER_CONTACT_PERSON</option>
        </field>		
        <field
            name="type"
            type="list"
            label="COM_ISBNREGISTRY_PUBLISHER_FILTER_TYPE_LABEL"
            description="COM_ISBNREGISTRY_PUBLISHER_FILTER_TYPE_DESC"
            onchange="this.form.submit();"
        >
            <option value="">COM_ISBNREGISTRY_PUBLISHER_FILTER_TYPE_SELECT</option>
            <option value="ISBN">ISBN</option>
            <option value="ISMN">ISMN</option>           
        </field>
        <field
            name="has_quitted"
            type="list"
            label="COM_ISBNREGISTRY_PUBLISHER_FILTER_STATE_LABEL"
            description="COM_ISBNREGISTRY_PUBLISHER_FILTER_STATE_DESC"
            onchange="this.form.submit();"
        >
            <option value="">COM_ISBNREGISTRY_PUBLISHER_FILTER_STATE_SELECT</option>
            <option value="0">COM_ISBNREGISTRY_PUBLISHER_FILTER_STATE_ACTIVE</option>
            <option value="1">COM_ISBNREGISTRY_PUBLISHER_FILTER_STATE_QUITTED</option>
        </field>  
        <field 
            name="lang_code" 
            type="language" 
            client="site" 
            default="" 
            label="COM_ISBNREGISTRY_PUBLISHER_FILTER_LANGUAGE_LABEL"
            description="COM_ISBNREGISTRY_PUBLISHER_FILTER_LANGUAGE_DESC"
            onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_LANGUAGE</option>
        </field>
        <field
            name="no_identifier"
            type="list"
            label="COM_ISBNREGISTRY_PUBLISHER_FILTER_NO_IDENTIFIER_LABEL"
            description="COM_ISBNREGISTRY_PUBLISHER_FILTER_NO_IDENTIFIER_DESC"
            onchange="this.form.submit();"
        >
            <!--<option value="">COM_ISBNREGISTRY_PUBLISHER_FILTER_NO_IDENTIFIER_SELECT</option>-->
            <option value="1">COM_ISBNREGISTRY_PUBLISHER_FILTER_NO_IDENTIFIER</option>
            <!--<option value="2">COM_ISBNREGISTRY_PUBLISHER_FILTER_NO_IDENTIFIER_ISBN</option>
            <option value="3">COM_ISBNREGISTRY_PUBLISHER_FILTER_NO_IDENTIFIER_ISMN</option>
            <option value="4">COM_ISBNREGISTRY_PUBLISHER_FILTER_IDENTIFIER</option>-->		
			<option value="5">COM_ISBNREGISTRY_PUBLISHER_FILTER_IDENTIFIER_ISBN_OR_ISMN</option>
            <!--<option value="6">COM_ISBNREGISTRY_PUBLISHER_FILTER_IDENTIFIER_ISBN</option>
            <option value="7">COM_ISBNREGISTRY_PUBLISHER_FILTER_IDENTIFIER_ISMN</option>-->
        </field>
        <field
            name="has_email"
            type="list"
            label="COM_ISBNREGISTRY_PUBLISHER_FILTER_HAS_EMAIL_LABEL"
            description="COM_ISBNREGISTRY_PUBLISHER_FILTER_HAS_EMAIL_DESC"
            onchange="this.form.submit();"
        >
            <option value="">COM_ISBNREGISTRY_PUBLISHER_FILTER_HAS_EMAIL_SELECT</option>
			<option value="1">JYES</option>
            <option value="0">JNO</option>           
        </field>		
    </fields>
    <fields name="list">
        <field
            name="limit"
            type="limitbox"
            class="input-mini"
            default="25"
            label="COM_ISBNREGISTRY_LIST_LIMIT"
            description="COM_ISBNREGISTRY_LIST_LIMIT_DESC"
            onchange="this.form.submit();"
        />
    </fields>
</form>
