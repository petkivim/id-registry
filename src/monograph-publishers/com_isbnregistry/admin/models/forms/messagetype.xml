<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_isbnregistry/models/rules">	
    <fieldset>
        <field
            name="id"
            type="hidden"
        />			
        <field
            name="name"
            type="text"
            label="COM_ISBNREGISTRY_MESSAGE_TYPE_FIELD_NAME_LABEL"
            description="COM_ISBNREGISTRY_MESSAGE_TYPE_FIELD_NAME_DESC"
            size="20"
            class="inputbox validate-name"
			required="true"
            default=""
        />
        <field
            name="description"
            type="textarea"
            label="COM_ISBNREGISTRY_MESSAGE_TYPE_FIELD_DESCRIPTION_LABEL"
            description="COM_ISBNREGISTRY_MESSAGE_TYPE_FIELD_DESCRIPTION_DESC"
            class="inputbox validate-description"
            rows="3"
            cols="40"
        /> 		
        <field 
            name="created"
            type="calendar"
            label="COM_ISBNREGISTRY_MESSAGE_TYPE_FIELD_CREATED_LABEL"
            description="COM_ISBNREGISTRY_MESSAGE_TYPE_FIELD_CREATED_DESC"
            readonly="true"
            class="readonly"
            format="%Y-%m-%d %H:%M:%S"
            filter="server_utc"
        />
        <field
            name="created_by"
            type="text"
            label="COM_ISBNREGISTRY_MESSAGE_TYPE_FIELD_CREATED_BY_LABEL"
            description="COM_ISBNREGISTRY_MESSAGE_TYPE_FIELD_CREATED_BY_DESC"
            size="20"
            readonly="true"
            class="readonly"
        />	
        <field 
            name="modified"
            type="calendar"
            label="COM_ISBNREGISTRY_MESSAGE_TYPE_FIELD_MODIFIED_LABEL"
            description="COM_ISBNREGISTRY_MESSAGE_TYPE_FIELD_MODIFIED_DESC"
            readonly="true"
            class="readonly"
            format="%Y-%m-%d %H:%M:%S"
            filter="server_utc"
        />
        <field
            name="modified_by"
            type="text"
            label="COM_ISBNREGISTRY_MESSAGE_TYPE_FIELD_MODIFIED_BY_LABEL"
            description="COM_ISBNREGISTRY_MESSAGE_TYPE_FIELD_MODIFIED_BY_DESC"
            size="20"
            readonly="true"
            class="readonly"
        />
    </fieldset>
</form>