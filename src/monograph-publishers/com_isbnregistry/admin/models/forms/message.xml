<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_isbnregistry/models/rules">	
    <fieldset>
        <field
            name="id"
            type="hidden"
        />	
        <field 
            name="lang_code" 
            type="hidden"
        />		
        <field 
            name="message_type_id" 
            type="hidden"
        />	
        <field 
            name="message_template_id" 
            type="hidden"
        />
        <field 
            name="publisher_id" 
            type="hidden"
        />
        <field 
            name="publication_id" 
            type="hidden"
        />	
        <field 
            name="batch_id" 
            type="hidden"
        />        		
        <field
            name="recipient"
            type="email"
            label="COM_ISBNREGISTRY_MESSAGE_FIELD_RECIPIENT_LABEL"
            description="COM_ISBNREGISTRY_MESSAGE_FIELD_RECIPIENT_DESC"
            size="20"
            required="true"
            class="inputbox"
            default=""
            validate="email"
        />	
        <field
            name="subject"
            type="text"
            label="COM_ISBNREGISTRY_MESSAGE_FIELD_SUBJECT_LABEL"
            description="COM_ISBNREGISTRY_MESSAGE_FIELD_SUBJECT_DESC"
            required="true" 
            class="inputbox validate-subject"
        />
        <field
            name="message"
            type="editor"
            label="COM_ISBNREGISTRY_MESSAGE_FIELD_MESSAGE_LABEL"
            description="COM_ISBNREGISTRY_MESSAGE_FIELD_MESSAGE_DESC"
            required="true"
            buttons="true"
            hide="readmore,pagebreak,image,article" 
            class="validate-message"
            filter="safehtml"
        /> 		
        <field 
            name="sent"
            type="calendar"
            label="COM_ISBNREGISTRY_MESSAGE_FIELD_SENT_LABEL"
            description="COM_ISBNREGISTRY_MESSAGE_FIELD_SENT_DESC"
            readonly="true"
            class="readonly"
            format="%Y-%m-%d %H:%M:%S"
            filter="server_utc"
        />
        <field
            name="sent_by"
            type="text"
            label="COM_ISBNREGISTRY_MESSAGE_FIELD_SENT_BY_LABEL"
            description="COM_ISBNREGISTRY_MESSAGE_FIELD_SENT_BY_DESC"
            size="20"
            readonly="true"
            class="readonly"
        />	
    </fieldset>
</form>