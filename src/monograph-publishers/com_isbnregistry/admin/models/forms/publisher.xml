<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_isbnregistry/models/rules">
    <fieldset>
        <field
            name="id"
            type="hidden"
        />	
        <field
            name="data_source"
            type="text"
            label="COM_ISBNREGISTRY_PUBLISHER_FIELD_DATA_SOURCE_LABEL"
            description="COM_ISBNREGISTRY_PUBLISHER_FIELD_DATA_SOURCE_DESC"
            size="20"
            readonly="true"
            class="inputbox"
            default="ADMIN"
            required="true"
        />					
        <field 
            name="donation_timestamp"
            type="calendar"
            label="COM_ISBNREGISTRY_PUBLISHER_FIELD_DONATION_TIMESTAMP_LABEL"
            description="COM_ISBNREGISTRY_PUBLISHER_FIELD_DONATION_TIMESTAMP_DESC"
            disabled="true"
            class="readonly"
            format="%d.%m.%Y %H:%M:%S"
        />				
        <field
            name="category"
            type="list"
            default="PRI"
            label="COM_ISBNREGISTRY_PUBLISHER_FIELD_CATEGORY_LABEL"
            description="COM_ISBNREGISTRY_PUBLISHER_FIELD_CATEGORY_DESC"
            required="true"
        >	
            <option value="PRI">COM_ISBNREGISTRY_PUBLISHER_FIELD_CATEGORY_PRI_LABEL</option>
            <option value="COM">COM_ISBNREGISTRY_PUBLISHER_FIELD_CATEGORY_COM_LABEL</option>
        </field>				
        <field
            name="first_name"
            type="text"
            label="COM_ISBNREGISTRY_PUBLISHER_FIELD_FIRST_NAME_LABEL"
            description="COM_ISBNREGISTRY_PUBLISHER_FIELD_FIRST_NAME_DESC"
            size="20"
            class="inputbox"
            default=""
            required="true"
        />
        <field
            name="last_name"
            type="text"
            label="COM_ISBNREGISTRY_PUBLISHER_FIELD_LAST_NAME_LABEL"
            description="COM_ISBNREGISTRY_PUBLISHER_FIELD_LAST_NAME_DESC"
            size="20"
            class="inputbox"
            default=""
            required="true"
        />	
        <field
            name="organization"
            type="text"
            label="COM_ISBNREGISTRY_PUBLISHER_FIELD_ORGANIZATION_LABEL"
            description="COM_ISBNREGISTRY_PUBLISHER_FIELD_ORGANIZATION_DESC"
            size="20"
            class="inputbox"
            default=""
        />	
        <field
            name="address"
            type="text"
            label="COM_ISBNREGISTRY_PUBLISHER_FIELD_ADDRESS_LABEL"
            description="COM_ISBNREGISTRY_PUBLISHER_FIELD_ADDRESS_DESC"
            size="20"
            class="inputbox"
            default=""
            required="true"
        />	
        <field
            name="zip"
            type="text"
            label="COM_ISBNREGISTRY_PUBLISHER_FIELD_ZIP_LABEL"
            description="COM_ISBNREGISTRY_PUBLISHER_FIELD_ZIP_DESC"
            size="20"
            class="inputbox"
            default=""
            required="true"
        />	
        <field
            name="city"
            type="text"
            label="COM_ISBNREGISTRY_PUBLISHER_FIELD_CITY_LABEL"
            description="COM_ISBNREGISTRY_PUBLISHER_FIELD_CITY_DESC"
            size="20"
            class="inputbox"
            default=""
            required="true"
        />	
        <field
            name="country"
            type="text"
            label="COM_ISBNREGISTRY_PUBLISHER_FIELD_COUNTRY_LABEL"
            description="COM_ISBNREGISTRY_PUBLISHER_FIELD_COUNTRY_DESC"
            size="20"
            class="inputbox"
            default="Suomi"
            required="true"
        />					
        <field
            name="phone"
            type="text"
            label="COM_ISBNREGISTRY_PUBLISHER_FIELD_PHONE_LABEL"
            description="COM_ISBNREGISTRY_PUBLISHER_FIELD_PHONE_DESC"
            size="20"
            class="inputbox"
            default=""
        />					
        <field
            name="email"
            type="email"
            label="COM_ISBNREGISTRY_PUBLISHER_FIELD_EMAIL_LABEL"
            description="COM_ISBNREGISTRY_PUBLISHER_FIELD_EMAIL_DESC"
            size="20"
            class="inputbox"
            default=""
            required="true" 
            validate="email"
        />	
        <field
            name="amount"
            type="text"
            label="COM_ISBNREGISTRY_PUBLISHER_FIELD_AMOUNT_LABEL"
            description="COM_ISBNREGISTRY_PUBLISHER_FIELD_AMOUNT_DESC"
            size="20"
            class="inputbox validate-amount"
            default="25,00"
            required="true"
            validate="amount"
        />	
        <field
            name="payment_method"
            type="list"
            default="PAYPAL"
            label="COM_ISBNREGISTRY_PUBLISHER_FIELD_PAYMENT_METHOD_LABEL"
            description="COM_ISBNREGISTRY_PUBLISHER_FIELD_PAYMENT_METHOD_DESC"
            required="true"
        >	
            <option value="CHECKOUT">COM_ISBNREGISTRY_PUBLISHER_FIELD_PAYMENT_METHOD_CHECKOUT_LABEL</option>
            <option value="PAYPAL">COM_ISBNREGISTRY_PUBLISHER_FIELD_PAYMENT_METHOD_PAYPAL_LABEL</option>
            <option value="BANK">COM_ISBNREGISTRY_PUBLISHER_FIELD_PAYMENT_METHOD_BANK_LABEL</option>
        </field>				
        <field
            name="permission"
            type="radio"
            label="COM_ISBNREGISTRY_PUBLISHER_FIELD_PERMISSION_LABEL"
            description="COM_ISBNREGISTRY_PUBLISHER_FIELD_PERMISSION_DESC"
            default="0"
            required="true"
            validate="boolean"
        >	
            <option value="0">COM_ISBNREGISTRY_PUBLISHER_FIELD_NO</option>
            <option value="1">COM_ISBNREGISTRY_PUBLISHER_FIELD_YES</option>
        </field>		
        <field
            name="confirmation"
            type="radio"
            label="COM_ISBNREGISTRY_PUBLISHER_FIELD_CONFIRMATION_LABEL"
            description="COM_ISBNREGISTRY_PUBLISHER_FIELD_CONFIRMATION_DESC"
            default="0"
            required="true"
            validate="boolean"
        >
            <option value="0">COM_ISBNREGISTRY_PUBLISHER_FIELD_NO</option>
            <option value="1">COM_ISBNREGISTRY_PUBLISHER_FIELD_YES</option>
        </field>
        <field 
            name="confirmation_timestamp"
            type="calendar"
            label="COM_ISBNREGISTRY_PUBLISHER_FIELD_CONFIRMATION_TIMESTAMP_LABEL"
            description="COM_ISBNREGISTRY_PUBLISHER_FIELD_CONFIRMATION_TIMESTAMP_DESC"
            disabled="true"
            class="readonly"
            format="%d.%m.%Y %H:%M:%S"
        />	
        <field
            name="confirmation_status"
            type="text"
            label="COM_ISBNREGISTRY_PUBLISHER_FIELD_CONFIRMATION_STATUS_LABEL"
            description="COM_ISBNREGISTRY_PUBLISHER_FIELD_CONFIRMATION_STATUS_DESC"
            size="20"
            disabled="true"
            class="inputbox"
            default=""
        />				
        <field
            name="confirmation_action"
            type="text"
            label="COM_ISBNREGISTRY_PUBLISHER_FIELD_CONFIRMATION_ACTION_LABEL"
            description="COM_ISBNREGISTRY_PUBLISHER_FIELD_CONFIRMATION_ACTION_DESC"
            size="20"
            disabled="true"
            class="inputbox"
            default=""
        />				
        <field
            name="co_payment_id"
            type="text"
            label="COM_ISBNREGISTRY_PUBLISHER_FIELD_CO_PAYMENT_ID_LABEL"
            description="COM_ISBNREGISTRY_PUBLISHER_FIELD_CO_PAYMENT_ID_DESC"
            size="20"
            disabled="true"
            class="inputbox"
            default=""
        />					
    </fieldset>
</form>