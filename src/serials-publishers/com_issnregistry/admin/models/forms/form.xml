<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_issnregistry/models/rules">	
    <fieldset>
        <field
            name="id"
            type="hidden"
        />			
		<field
            name="publisher"
            type="text"
            label="COM_ISSNREGISTRY_FORM_FIELD_PUBLISHER_LABEL"
            description="COM_ISSNREGISTRY_FORM_FIELD_PUBLISHER_DESC"
            size="20"
            class="inputbox validate-publisher"
            default=""
        />
        <field
            name="contact_person"
            type="text"
            label="COM_ISSNREGISTRY_FORM_FIELD_CONTACT_PERSON_LABEL"
            description="COM_ISSNREGISTRY_FORM_FIELD_CONTACT_PERSON_DESC"
            size="20"
            class="inputbox validate-contactperson"
            default=""
        />
        <field
            name="email"
            type="email"
            label="COM_ISBNREGISTRY_PUBLISHER_FIELD_EMAIL_LABEL"
            description="COM_ISBNREGISTRY_PUBLISHER_FIELD_EMAIL_DESC"
            size="20"
            class="inputbox"
            default=""
            validate="email"
        />		
		<field
            name="phone"
            type="text"
            label="COM_ISBNREGISTRY_PUBLISHER_FIELD_PHONE_LABEL"
            description="COM_ISBNREGISTRY_PUBLISHER_FIELD_PHONE_DESC"
            size="20"
            class="inputbox validate-phone"
            default=""
        />						
        <field
            name="address"
            type="text"
            label="COM_ISSNREGISTRY_FORM_FIELD_ADDRESS_LABEL"
            description="COM_ISSNREGISTRY_FORM_FIELD_ADDRESS_DESC"
            size="20"
            class="inputbox validate-address"
            default=""
        />	
        <field
            name="zip"
            type="text"
            label="COM_ISSNREGISTRY_FORM_FIELD_ZIP_LABEL"
            description="COM_ISSNREGISTRY_FORM_FIELD_ZIP_DESC"
            size="20"
            class="inputbox validate-zip"
            default=""
        />	
        <field
            name="city"
            type="text"
            label="COM_ISSNREGISTRY_FORM_FIELD_CITY_LABEL"
            description="COM_ISSNREGISTRY_FORM_FIELD_CITY_DESC"
            size="20"
            class="inputbox validate-city"
            default=""
        />	
        <field 
            name="lang_code" 
            type="language" 
            client="site" 
            default="fi-FI" 
			class="validate-langcode"
            label="COM_ISSNREGISTRY_FORM_FIELD_LANGUAGE_LABEL"
            description="COM_ISSNREGISTRY_FORM_FIELD_LANGUAGE_DESC"
        />		
        <field
            name="status"
            type="list"
            label="COM_ISSNREGISTRY_FORM_FIELD_STATUS_LABEL"
            description="COM_ISSNREGISTRY_FORM_FIELD_STATUS_DESC"
            class="validate-status"
            default="NOT_HANDLED"
        >	
			<option value="">COM_ISSNREGISTRY_FIELD_SELECT</option>
			<option value="NOT_HANDLED">COM_ISSNREGISTRY_FORM_STATUS_NOT_HANDLED</option>
			<option value="NOT_NOTIFIED">COM_ISSNREGISTRY_FORM_STATUS_NOT_NOTIFIED</option>
			<option value="COMPLETED">COM_ISSNREGISTRY_FORM_STATUS_COMPLETED</option>
		</field>	
        <field
            name="publication_count"
            type="text"
            label="COM_ISSNREGISTRY_FORM_FIELD_PUBLICATION_COUNT_LABEL"
            description="COM_ISSNREGISTRY_FORM_FIELD_PUBLICATION_COUNT_DESC"
            size="20"
            readonly="true"
            class="readonly"
			default="0"
        />	
        <field
            name="publisher_id"
            type="Publisher"
            label="COM_ISSNREGISTRY_FORM_FIELD_PUBLISHER_ID_LABEL"
            description="COM_ISSNREGISTRY_FORM_FIELD_PUBLISHER_ID_DESC"
            class="validate-publisherid"
            default=""
        />			
        <field 
            name="created"
            type="calendar"
            label="COM_ISSNREGISTRY_FORM_FIELD_CREATED_LABEL"
            description="COM_ISSNREGISTRY_FORM_FIELD_CREATED_DESC"
            readonly="true"
            class="readonly"
            format="%Y-%m-%d %H:%M:%S"
            filter="server_utc"
        />
        <field
            name="created_by"
            type="text"
            label="COM_ISSNREGISTRY_FORM_FIELD_CREATED_BY_LABEL"
            description="COM_ISSNREGISTRY_FORM_FIELD_CREATED_BY_DESC"
            size="20"
            readonly="true"
            class="readonly"
        />	
        <field 
            name="modified"
            type="calendar"
            label="COM_ISSNREGISTRY_FORM_FIELD_MODIFIED_LABEL"
            description="COM_ISSNREGISTRY_FORM_FIELD_MODIFIED_DESC"
            readonly="true"
            class="readonly"
            format="%Y-%m-%d %H:%M:%S"
            filter="server_utc"
        />
        <field
            name="modified_by"
            type="text"
            label="COM_ISSNREGISTRY_FORM_FIELD_MODIFIED_BY_LABEL"
            description="COM_ISSNREGISTRY_FORM_FIELD_MODIFIED_BY_DESC"
            size="20"
            readonly="true"
            class="readonly"
        />
    </fieldset>
</form>