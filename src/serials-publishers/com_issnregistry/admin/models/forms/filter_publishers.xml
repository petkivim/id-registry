<form>
    <fields name="filter">
        <field
            name="search"
            type="text"
            label="COM_ISSNREGISTRY_PUBLISHER_FILTER_SEARCH_LABEL"
            description="COM_ISSNREGISTRY_PUBLISHER_FILTER_SEARCH_DESC"
            hint="JSEARCH_FILTER"
        />
        <field 
            name="lang_code" 
            type="language" 
            client="site" 
            default="" 
            label="COM_ISSNREGISTRY_PUBLISHER_FILTER_LANGUAGE_LABEL"
            description="COM_ISSNREGISTRY_PUBLISHER_FILTER_LANGUAGE_DESC"
            onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_LANGUAGE</option>
        </field>
    </fields>
    <fields name="list">
        <field
            name="limit"
            type="limitbox"
            class="input-mini"
            default="25"
            label="COM_ISSNREGISTRY_LIST_LIMIT"
            description="COM_ISSNREGISTRY_LIST_LIMIT_DESC"
            onchange="this.form.submit();"
        />
    </fields>
</form>
