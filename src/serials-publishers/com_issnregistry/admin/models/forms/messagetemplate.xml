<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_issnregistry/models/rules">	
    <fieldset>
        <field
            name="id"
            type="hidden"
        />	
		<field
            name="name"
            type="text"
            label="COM_ISSNREGISTRY_MESSAGE_TEMPLATE_FIELD_NAME_LABEL"
            description="COM_ISSNREGISTRY_MESSAGE_TEMPLATE_FIELD_NAME_DESC"
            size="20"
            class="inputbox validate-name"
			required="true"
            default=""
        />
        <field 
            name="lang_code" 
            type="language" 
            client="site" 
            default="fi-FI" 
			required="true"
            label="COM_ISSNREGISTRY_MESSAGE_TEMPLATE_FIELD_LANGUAGE_LABEL"
            description="COM_ISSNREGISTRY_MESSAGE_TEMPLATE_FIELD_LANGUAGE_DESC"
        />		
        <field 
            name="message_type_id" 
            type="MessageType" 
            default="" 
            label="COM_ISSNREGISTRY_MESSAGE_TEMPLATE_FIELD_MESSAGE_TYPE_LABEL"
            description="COM_ISSNREGISTRY_MESSAGE_TEMPLATE_FIELD_MESSAGE_TYPE_DESC"
			required="true"
        />			
		<field
			name="subject"
			type="text"
			label="COM_ISSNREGISTRY_MESSAGE_TEMPLATE_FIELD_SUBJECT_LABEL"
			description="COM_ISSNREGISTRY_MESSAGE_TEMPLATE_FIELD_SUBJECT_DESC"
			required="true" 
			class="inputbox validate-subject"
			/>
		<field
			name="message"
			type="editor"
			label="COM_ISSNREGISTRY_MESSAGE_TEMPLATE_FIELD_MESSAGE_LABEL"
			description="COM_ISSNREGISTRY_MESSAGE_TEMPLATE_FIELD_MESSAGE_DESC"
			required="true"
			buttons="true"
			hide="readmore,pagebreak,image,article" 
			class="validate-message"
			filter="safehtml"
			/> 		
        <field 
            name="created"
            type="calendar"
            label="COM_ISSNREGISTRY_MESSAGE_TEMPLATE_FIELD_CREATED_LABEL"
            description="COM_ISSNREGISTRY_MESSAGE_TEMPLATE_FIELD_CREATED_DESC"
            readonly="true"
            class="readonly"
            format="%Y-%m-%d %H:%M:%S"
            filter="server_utc"
        />
        <field
            name="created_by"
            type="text"
            label="COM_ISSNREGISTRY_MESSAGE_TEMPLATE_FIELD_CREATED_BY_LABEL"
            description="COM_ISSNREGISTRY_MESSAGE_TEMPLATE_FIELD_CREATED_BY_DESC"
            size="20"
            readonly="true"
            class="readonly"
        />	
        <field 
            name="modified"
            type="calendar"
            label="COM_ISSNREGISTRY_MESSAGE_TEMPLATE_FIELD_MODIFIED_LABEL"
            description="COM_ISSNREGISTRY_MESSAGE_TEMPLATE_FIELD_MODIFIED_DESC"
            readonly="true"
            class="readonly"
            format="%Y-%m-%d %H:%M:%S"
            filter="server_utc"
        />
        <field
            name="modified_by"
            type="text"
            label="COM_ISSNREGISTRY_MESSAGE_TEMPLATE_FIELD_MODIFIED_BY_LABEL"
            description="COM_ISSNREGISTRY_MESSAGE_TEMPLATE_FIELD_MODIFIED_BY_DESC"
            size="20"
            readonly="true"
            class="readonly"
        />
    </fieldset>
</form>